{
    "extends": "tslint:recommended",
    "rules": {
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "no-reference": false,
        "no-unused-variable": [
            true,
            {
                "vars": "all",
                "args": "after-used",
                "ignoreRestSiblings": false
            }
        ],
        "ban-types": false,
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "private-static-method"
                ]
            }
        ],
        "no-console": [
            false
        ],
        "no-debugger": false,
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "never"
            }
        ],
    }
}