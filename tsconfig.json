{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": false,
        "declaration": true,
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": false,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./dist/types",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "target": "es6"
    },
    "include": [
        "node_modules/@types/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}
